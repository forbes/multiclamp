{
  "name": "multiclamp",
  "version": "1.0.0",
  "description": "A small, performant utility for truncating multiple lines of text in a single DOM element.",
  "main": "index.js",
  "unpkg": "dist/multiclamp.min.js",
  "scripts": {
    "build": "rimraf dist/* && webpack && cp src/index.js dist",
    "build:demo": "rimraf demo/dist/* && webpack --mode development",
    "prepublish": "npm test && npm run build",
    "pretest": "npm run lint",
    "start": "rimraf demo/dist/* && webpack-dev-server --open --mode development",
    "test": "jest",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix"
  },
  "author": "Aaron Romel <aromel@forbes.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-jest": "^23.4.2",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.7.0",
    "eslint": "^5.0.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.13.0",
    "jest": "^23.5.0",
    "regenerator-runtime": "^0.12.1",
    "rimraf": "^2.6.2",
    "webpack": "^4.14.0",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.4"
  }
}
