{
  "name": "@forbesmedia/multiclamp",
  "version": "2.0.0",
  "description": "A small, performant utility for truncating multiple lines of text in a single DOM element.",
  "main": "dist/index.js",
  "unpkg": "dist/multiclamp.min.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist/* && webpack && webpack --config webpack.min.config.js",
    "build:demo": "rimraf demo/dist/* && webpack --mode development",
    "prepublish": "npm test && npm run build",
    "pretest": "npm run lint",
    "start": "rimraf dist/* && webpack -w --mode development",
    "test": "jest",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix"
  },
  "author": "Aaron Romel <aromel@forbes.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-jest": "^23.4.2",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "concurrently": "^4.0.1",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "jest": "^23.5.0",
    "regenerator-runtime": "^0.12.1",
    "rimraf": "^2.6.2",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/forbes/multiclamp"
  }
}
